<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:batch="http://www.springframework.org/schema/batch"
       xsi:schemaLocation="
    http://www.springframework.org/schema/batch
    http://www.springframework.org/schema/batch/spring-batch-2.1.xsd
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <import resource="classpath:batch-infra.xml"/>
    <import resource="classpath:cvs2Svn-si.xml"/>

    <batch:job id="jobMigrator">
        <batch:step id="backup-jobs" next="migrate-jobs">
            <batch:tasklet>
                <batch:chunk reader="backup-reader"
                             writer="backup-writer"
                             commit-interval="10"/>
                <batch:listeners>
                    <batch:listener>
                        <bean class="org.springframework.batch.core.listener.ExecutionContextPromotionListener">
                            <property name="keys" value="configJobPaths,migrationMap"/>
                        </bean>
                    </batch:listener>
                </batch:listeners>
            </batch:tasklet>
        </batch:step>
        <batch:step id="migrate-jobs">
            <batch:tasklet>
                <batch:chunk reader="migrate-reader"
                             processor="migrate-processor"
                             writer="migrate-writer"
                             commit-interval="10"/>
            </batch:tasklet>
        </batch:step>
    </batch:job>

    <bean id="backup-reader" class="com.boissinot.jenkins.csvexporter.test.BackupJobItemReader" scope="step">
        <constructor-arg value="#{jobParameters['jenkinsHome']}"/>
        <constructor-arg value="#{jobParameters['svnUrlRoot']}"/>
        <constructor-arg value="#{jobParameters['inputMigrationInputFilePath']}"/>
    </bean>
    <bean id="backup-writer" class="com.boissinot.jenkins.csvexporter.test.BackupJobItemWriter"/>
    <bean id="migrate-reader" class="com.boissinot.jenkins.csvexporter.test.MigrationJobItemReader"/>
    <bean id="migrate-writer" class="com.boissinot.jenkins.csvexporter.test.MigrationJobItemWriter"/>

</beans>