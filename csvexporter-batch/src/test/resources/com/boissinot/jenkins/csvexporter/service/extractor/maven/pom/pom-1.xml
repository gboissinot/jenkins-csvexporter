    <dependencyManagement>
        <dependencies>
            <!-- import BOM part -->
            <dependency>
                <groupId>fr.soleil.bom</groupId>
                <artifactId>Java-3rdParties</artifactId>
                <version>${Java-3rdParties.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>fr.soleil.bom</groupId>
                <artifactId>Java-Applications</artifactId>
                <version>${Java-Applications.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>fr.soleil.bom</groupId>
                <artifactId>Java-Devices</artifactId>
                <version>${Java-Devices.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>fr.soleil.bom</groupId>
                <artifactId>C-CPP-3rdParties</artifactId>
                <version>${C-CPP-3rdParties.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>fr.soleil.bom</groupId>
                <artifactId>C-CPP-Libraries</artifactId>
                <version>${C-CPP-Libraries.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>fr.soleil.bom</groupId>
                <artifactId>C-CPP-Devices</artifactId>
                <version>${C-CPP-Devices.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <dependencies>
        <dependency>
            <groupId>fr.soleil.gui</groupId>
            <artifactId>Zouk</artifactId>
        </dependency>
        <dependency>
            <groupId>fr.soleil.gui</groupId>
            <artifactId>Tumba</artifactId>
        </dependency>
        <dependency>
            <groupId>fr.soleil.gui.salsa</groupId>
            <artifactId>SalsaClient</artifactId>
        </dependency>
        <dependency>
            <groupId>fr.soleil.gui</groupId>
            <artifactId>charleston</artifactId>
        </dependency>
        <dependency>
            <groupId>org.cdma.gui</groupId>
            <artifactId>DataBrowser</artifactId>
        </dependency>
        <dependency>
            <groupId>fr.soleil.comete.bean</groupId>
            <artifactId>DataStorageApplication</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <configuration>
                    <releaseProfiles>release</releaseProfiles>
                    <goals>deploy</goals>
                    <arguments>-DenableCheckRelease=false -Drelease=true -Pstable</arguments>
                </configuration>
            </plugin>
            <plugin>
                <groupId>fr.soleil.maven.plugins</groupId>
                <artifactId>maven-distrib-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <id>zip</id>
                        <goals>
                            <goal>zip</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <finalName>${project.groupId}.${project.artifactId}-${project.version}</finalName>
                    <jarDirectory>share/java</jarDirectory>
                    <scriptList combine.children="append">

                        <distribComponent>
                            <templatePath>src/main/template/linux/zouk.vm</templatePath>
                            <fileName>zouk</fileName>
                            <groupId>fr.soleil.gui</groupId>
                            <artifactId>Zouk</artifactId>
                            <directory>bin/linux</directory>
                        </distribComponent>

                        <distribComponent>
                            <templatePath>src/main/template/linux/tumba.vm</templatePath>
                            <fileName>tumba</fileName>
                            <groupId>fr.soleil.gui</groupId>
                            <artifactId>Tumba</artifactId>
                            <directory>bin/linux</directory>
                        </distribComponent>

                        <distribComponent>
                            <templatePath>src/main/template/linux/salsaV3.vm</templatePath>
                            <fileName>salsa</fileName>
                            <groupId>fr.soleil.gui.salsa</groupId>
                            <artifactId>SalsaClient</artifactId>
                            <directory>bin/linux</directory>
                        </distribComponent>

                        <distribComponent>
                            <templatePath>src/main/template/linux/charleston.vm</templatePath>
                            <fileName>charleston</fileName>
                            <groupId>fr.soleil.gui</groupId>
                            <artifactId>charleston</artifactId>
                            <directory>bin/linux</directory>
                        </distribComponent>

                        <distribComponent>
                            <templatePath>src/main/template/linux/databrowser.vm</templatePath>
                            <fileName>databrowser</fileName>
                            <groupId>org.cdma.gui</groupId>
                            <artifactId>DataBrowser</artifactId>
                            <directory>bin/linux</directory>
                        </distribComponent>

                        <distribComponent>
                            <templatePath>src/main/template/linux/datastorage.vm</templatePath>
                            <fileName>datastorage</fileName>
                            <groupId>fr.soleil.comete.bean</groupId>
                            <artifactId>DataStorageApplication</artifactId>
                            <directory>bin/linux</directory>
                        </distribComponent>

                        <!-- Windows scripts -->
                        <distribComponent>
                            <templatePath>src/main/template/windows/zouk.bat.vm</templatePath>
                            <fileName>zouk.bat</fileName>
                            <groupId>fr.soleil.gui</groupId>
                            <artifactId>Zouk</artifactId>
                            <directory>bin/windows</directory>
                        </distribComponent>

                        <distribComponent>
                            <templatePath>src/main/template/windows/tumba.bat.vm</templatePath>
                            <fileName>tumba.bat</fileName>
                            <groupId>fr.soleil.gui</groupId>
                            <artifactId>Tumba</artifactId>
                            <directory>bin/windows</directory>
                        </distribComponent>

                        <distribComponent>
                            <templatePath>src/main/template/windows/salsaV3.bat.vm</templatePath>
                            <fileName>salsa.bat</fileName>
                            <groupId>fr.soleil.gui.salsa</groupId>
                            <artifactId>SalsaClient</artifactId>
                            <directory>bin/windows</directory>
                        </distribComponent>

                        <distribComponent>
                            <templatePath>src/main/template/windows/charleston.bat.vm </templatePath>
                            <fileName>charleston.bat</fileName>
                            <groupId>fr.soleil.gui</groupId>
                            <artifactId>charleston</artifactId>
                            <directory>bin/windows</directory>
                        </distribComponent>

                        <distribComponent>
                            <templatePath>src/main/template/windows/databrowser.bat.vm </templatePath>
                            <fileName>databrowser.bat</fileName>
                            <groupId>org.cdma.gui</groupId>
                            <artifactId>DataBrowser</artifactId>
                            <directory>bin/windows</directory>
                        </distribComponent>

                        <distribComponent>
                            <templatePath>src/main/template/windows/datastorage.bat.vm </templatePath>
                            <fileName>datastorage.bat</fileName>
                            <groupId>fr.soleil.comete.bean</groupId>
                            <artifactId>DataStorageApplication</artifactId>
                            <directory>bin/windows</directory>
                        </distribComponent>

                    </scriptList>
                </configuration>
            </plugin>
        </plugins>
    </build>

